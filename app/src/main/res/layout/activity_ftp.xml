                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:padding="6dp"
                    android:text="@string/seleccionamos_el_directorio_del_que_deseamos_modificar_el_l_mite_disponible_a_trav_s_del_desplegable_introducimos_el_l_mite_en_mega_bytes_en_la_caja_de_texto_y_pulsamos_sobre_el_bot_n_modificar_l_mite"
