<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/turnback"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/volver_atr_s"/>

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manual_de_usuario"
            android:textColor="#3E50B4"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Main ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Índice Section -->

            <!-- Contenido de Usuario Estándar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/ndice"
                    android:textColor="#3E50B4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/indexItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="@string/_1_inicio_de_sesion"
                    android:textColor="#fb962b"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/indexItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="@string/_2_uso_de_correo"
                    android:textColor="#757575"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/indexItem2.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="7dp"
                    android:text="@string/_2_1_leer_correo"
                    android:textColor="#757575"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/indexItem2.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="7dp"
                    android:text="@string/_2_2_enviar_correo"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/inicio_de_sesion"
                    android:textColor="#3E50B4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/los_usuarios_est_ndar_tienen_acceso_limitado_a_las_funciones_del_sistema_pueden_visualizar_e_interactuar_con_funcionalidades_b_sicas_pero_no_pueden_modificar_la_configuraci_n_del_sistema"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/requisitos_necesesarios"
                    android:textColor="#3E50B4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/la_cuenta_con_la_que_inicies_sesion_debe_coincidir_con_la_que_esta_registrada_con_su_usuario_de_la_aplicacion"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/posser_una_cuenta_de_google"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/ejemplo_grafico"
                    android:textColor="#3E50B4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_1_pincho_en_el_boton_de_login_with_google"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura_de_pantalla_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_2_en_el_navegador_eligo_la_cuenta_de_correo_correcta_tendra_que_ser_la_asociada_a_su_usuario_no_esta_disponible_usar_el_correo_de_la_fundacion"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="345dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_3_nos_aparecera_un_aviso_de_que_no_se_ha_verificado_le_doy_a_configuracion_avanzada"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_4_y_le_das_a_ir_a_appcorreo"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_5_le_doy_perpisos_para_que_pueda_usar_los_servicios_de_gmail_y_le_doy_en_continuar"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura5png" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_6_ya_has_terminado_el_inicio_de_sesion_es_posible_cerrar_la_pesta_a_y_continuar_en_la_aplicacion"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_uso_del_correo"
                    android:textColor="#3E50B4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/despu_s_de_haber_iniciado_sesi_n_cargar_la_bandeja_de_entrada_de_correos"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/al_lado_de_cada_correo_nos_aparecer_n_dos_botones_en_la_columna_actions_uno_elimina_el_correo_y_otro_cambia_el_estado_de_le_do_o_no_le_do_al_contrario"
                android:textColor="#757575"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/el_bot_n_de_refresh_recarga_la_bandeja_de_entrada_y_el_bot_n_de_log_out_cierra_sesi_n_del_correo_no_de_la_aplicaci_n"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="221dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura6" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_1_leer_correo_texto"
                    android:textColor="#3E50B4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/al_hacer_doble_clic_sobre_un_correo_este_se_abrir_en_una_nueva_pesta_a_donde_se_mostrar_el_contenido_completo_del_correo_y_los_archivos_adjuntos_organizados_en_un_apartado_llamado_attachments_en_este_apartado_cada_archivo_tendr_un_bot_n_que_permitir_descargarlo_autom_ticamente_al_hacer_clic"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura7" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_2_enviar_correo_texto"
                    android:textColor="#3E50B4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/en_la_bandeja_de_entrada_al_acceder_a_la_opci_n_enviar_mail_encontrar_s_los_campos_necesarios_para_completar_el_env_o_de_un_mensaje_el_campo_para_corresponde_al_destinatario_del_correo_quien_debe_estar_incluido_en_la_lista_blanca_whitelist_tambi_n_es_imprescindible_rellenar_el_asunto_y_el_mensaje_adem_s_al_pulsar_el_bot_n_adjuntar_archivo_se_abrir_el_explorador_de_carpetas_para_que_selecciones_los_archivos_que_deseas_enviar_sin_embargo_es_importante_tener_en_cuenta_que_el_tama_o_total_de_los_archivos_no_debe_superar_los_10_mb_ni_ning_n_archivo_individual_puede_exceder_este_l_mite"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captura8" />
            </LinearLayout>

            <!-- Puedes añadir más secciones aquí -->
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024 NetOrange protected rigths"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>